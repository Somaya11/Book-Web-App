<%- include('../partials/header') %>
  <h1>Wild Library</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% books.forEach(function(b){ %> 
      
      <tr>
          <td><a href="/books/<%= b.id %>">
            <%= b.title %>
          </a>
        </td>  
          <td><%= b.author %></td>
          <td><%= b.description %></td>
        </tr>
   <% }) %>
      <!-- Close the forEach using EJS here -->
    </tbody>
  </table>

  <%- include('../partials/footer') %>